<!DOCTYPE html>
<html>
     <head>
          <link rel="stylesheet" href="/stylesheets/style.css" />
     </head>
     <body>
          <h1 class="input-header">Enter new Message:</h1>
          <form class="msg-form" method="POST" action="/new">
               <input
                    type="text"
                    name="author"
                    id="author"
                    placeholder="Your name"
                    required
               />
               <textarea
                    rows="4"
                    cols="50"
                    maxlength="50"
                    style="resize: none"
                    type="text"
                    name="message"
                    id="message"
                    placeholder="Enter a message"
                    required
               ></textarea>
               <input type="submit" value="submit" />

               <a href="/">return to board</a>
          </form>
     </body>
</html>

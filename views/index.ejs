<!DOCTYPE html>
<html>
     <head>
          <title><%= title %></title>
          <link rel="stylesheet" href="/stylesheets/style.css" />
     </head>
     <body>
          <h1><%=title%></h1>
          <a href="/new">New message</a>
          <ul class="messages">
               <% for(const msg of messages) {%>
               <li>
                    <section class="message-card">
                         <div class="message-date">
                              <!-- prettier-ignore -->
                              <sub><%=distanceInWords(msg.added,  {addSuffix: true})%></sub>
                         </div>
                         <h2 class="message-username">
                              <strong><%=msg.user%></strong>
                         </h2>
                         <p class="message-body"><%=msg.text%></p>
                         <div
                              class="message-color"
                              style="background: <%= msg.color %>"
                         ></div>
                    </section>
               </li>
               <% } %>
          </ul>
     </body>
</html>
